 <% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
   
  
 <%- messages() %> 




 <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>


<%# Render the form for deleting inventory %>
<div id="inventory_container">
<h2>ALL FIELDS ARE REQUIRED</h2>
<p>Confirm Deletion - The delete is permanent.</p>
<form action="/inv/delete" method="post">
  <div class="form-group">
    <%- select %>

  </div>
  <div class="form-group">
    <label for="invMake">Make:</label>
    <input type="text" id="invMake" name="inv_make" minlength="3" title="The minimum alphabetic characters is three" placeholder="Min of 3 characters" required value="<%= locals.inv_make %>" readonly>
  </div>
  <div class="form-group">
    <label for="invModel">Model:</label>
    <input type="text" id="invModel" name="inv_model" minlength="3" title="The minimum alphabetic characters is three" placeholder="Min of 3 characters" required value="<%= locals.inv_model %>" readonly>
  </div>
  <div class="form-group">
    <label for="invPrice">Price:</label>
    <input type="number" id="invPrice" name="inv_price" step="0.01" min="0" title="Please enter a decimal or integer number" placeholder="decimal or integer" required value="<%= locals.inv_price %>" readonly>
  </div>
  <div class="form-group">
    <label for="invYear">Year:</label>
    <input type="number" id="invYear" name="inv_year" max="9999" min="1800" title="Please enter a four-digit year" required placeholder="4-digit year" value="<%= locals.inv_year %>" readonly>
  </div>
  <button type="submit">Delete Vehicle</button>
  <input type="hidden" name="inv_id"
<% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
<% } %>>
</form>
</div>
