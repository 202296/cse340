<%# 
***************************
 *  Implement a value for the <title> element that describes the content of the view
 * ************************** %>
 <% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
   
  
 <%- messages() %> 




 <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

  
 <div id="account-management">
 <% if (locals.accountData) { %>
   <% if (locals.accountData.account_type === 'Client') { %>
     <h2>Welcome <%= locals.accountData.account_firstname %></h2>
     <h3>You're logged in.</h3>
     <h3><a href="/account/update/<%= locals.accountData.account_id %>">Update Account Information</a></h3>
   <% } else if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
     <h2>Welcome <%= locals.accountData.account_firstname %></h2>
     <h3>You're logged in.</h3>
     <h3><a href="/account/update/<%= locals.accountData.account_id %>">Update Account Information</a></h3>
     <h3>Inventory Management</h3>
     <h3><a href="/inv/">Manage Inventory </a></h3>
   <% } %>  
 <% } else { %>
   <h3>You are not logged in.</h3>
 <% } %>
</div>
 
 