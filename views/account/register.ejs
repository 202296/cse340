<%#
***************************
*  Implement a value for the <title> element that describes the content of the view
************************** %>
<% if (title) { %>
    <h1><%= title %></h1>
  <% } else { %>
    <h1>Error</h1>
    <p>Sorry, an error occurred.</p>
  
    <% if (error && error.msg) { %>
      <ul class="error-list">
        <% for (let i = 0; i < error.msg.length; i++) { %>
          <li><%= error.msg[i] %></li>
        <% } %>
      </ul>
    <% } %>
  
  <% } %>
  
  
  <%- messages() %>
  
<%# Display registration %>
<div id="registration_container">
  <form action="/account/register" method="post">
    <label for="first-name">First Name:</label>
    <input type="text" id="first-name" name="account_firstname" required>
    
    <label for="last-name">Last Name:</label>
    <input type="text" id="last-name" name="account_lastname" required>
    
    <label for="email">Email:</label>
    <input type="email" id="email" name="account_email" required>
    
    <label for="password">Password:</label>
    <div class="password-toggle">
      <input type="checkbox" id="password-toggle" onclick="togglePasswordVisibility()">
      <label for="password-toggle">Show Password</label>
    </div>
    <input type="password" id="password" name="account_password" pattern="^(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*]).{12,}$" required title="Password must be at least 12 characters long, contain at least 1 capital letter, 1 number, and 1 special character">
    
    <button type="submit">Register</button>
  </form>
  <p>Already have an account? <a href="/account/login">Login here</a></p>
</div>  
  