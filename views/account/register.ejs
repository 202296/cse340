************************** %>
<% if (title) { %>
  <h1><%= title %></h1>
  <% } else {
      res.redirect('/')
  } %>
  
  
  
  
<%- messages() %>




 <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
  


  
<%# Display registration %>
<div id="registration_container">
  <h2>ALL FIELD ARE REQUIRED</h2>
  <form action="/account/register" method="post">
    <label for="first-name">First Name:</label>
    <input type="text" id="first-name" name="account_firstname" placeholder="Enter your firstname" required>
    
    <label for="last-name">Last Name:</label>
    <input type="text" id="last-name" name="account_lastname" placeholder="Enter your lastname" required>
    
    <label for="email">Email:</label>
    <input type="email" id="email" name="account_email" placeholder="Enter a valid email address" required>
    
    <label for="password">Password:</label>
    
    <input type="password" id="password" name="account_password" pattern="^(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*]).{12,}$" required title="Password must be at least 12 characters long, contain at least 1 capital letter, 1 number, and 1 special character" placeholder="Enter a valid password">
    <p>Password must be at least 12 characters long, contain at least 1 capital letter, 1 number, and 1 special character</p>
    <div class="password-toggle">
      <input type="checkbox" id="password-toggle" onclick="togglePasswordVisibility()">
      <label for="password-toggle">Show Password</label>
    </div>
    
    <button type="submit">Register</button>
  </form>
  <p>Already have an account? <a href="/account/login">Login here</a></p>
</div>  
  