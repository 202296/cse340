<%# 
***************************
 *  Implement a value for the <title> element that describes the content of the view
 * ************************** %>
 <% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
   
  
 <%- messages() %> 


 <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<h1>Account Update Form</h1>

<div id="update_container">
    <h2>ALL FIELDS ARE REQUIRED</h2>
    <form id="update-account-form" action="/account/update-account" method="post">
      <label for="first-name">First Name:</label>
      <input type="text" id="first-name" name="account_firstname" minlength="1" placeholder="Enter your firstname" required value="<%= locals.account_firstname %>">
      
      <label for="last-name">Last Name:</label>
      <input type="text" id="last-name" name="account_lastname" placeholder="Enter your lastname" minlength="2" required value="<%= locals.account_lastname %>">
      
      <label for="email">Email:</label>
      <input type="email" id="email" name="account_email" placeholder="Enter a valid email address" required value="<%= locals.account_email %>">
      <button type="submit">Update Account</button>
      <input type="hidden" id="account-id" name="account_id"
    <% if(locals.account_id) { %> value="<%= locals.account_id %>"
    <% } %>>
    </form>
    </div>



<h1>Change Password Form</h1>

<div id="password-container">
    <p>Entering a password will change your current password</p>
    <form id="passForm" action="/account/update-password" method="post">
    <label for="password">New Password:</label>
    <input type="password" id="password" name="account_password" pattern="^(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*]).{12,}$" required title="Password must be at least 12 characters long, contain at least 1 capital letter, 1 number, and 1 special character" placeholder="Enter a valid password">
    <p>Password must be at least 12 characters long, contain at least 1 capital letter, 1 number, and 1 special character</p>
    <div class="password-toggle">
        <input type="checkbox" id="password-toggle" onclick="togglePasswordVisibility()">
        <label for="password-toggle">Show Password</label>
      </div>

    <button type="submit">Change</button>
    <input type="hidden" name="account_id"
    <% if(locals.account_id) { %> value="<%= locals.account_id %>"
    <% } %>>
    </form>
    </div>
