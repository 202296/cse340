<%# 
***************************
 *  Implement a value for the <title> element that describes the content of the view
 * ************************** %>
 <% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
   
  
 <%- messages() %> 




 <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>




<%# Display the login %>
<div id="account_container">
<form action="/account/login" method="post">
<label for="email">Email:</label>
<input type="email" id="email" name="account_email" placeholder="Enter a valid email address" required value="<%= locals.account_email %>">
<label for="password">Password:</label>
<input type="password" id="password" name="account_password" pattern="^(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*]).{12,}$" required title="Password must be at least 12 characters long, contain at least 1 capital letter, 1 number, and 1 special character" placeholder="Enter a valid password">
<p>Password must be at least 12 characters long, contain at least 1 capital letter, 1 number, and 1 special character</p>
<div class="password-toggle">
    <input type="checkbox" id="password-toggle" onclick="togglePasswordVisibility()">
    <label for="password-toggle">Show Password</label>
  </div>
  
<button type="submit">Login</button>
<p>Don't have an account? <a href="/account/register">Register here</a></p>
</form>
</div>